{
    "name": "ethers-mode",
    "displayName": "Ethers Client",
    "description": "Ethers Client for VS Code",
    "version": "0.0.1",
    "publisher": "acuarica",
    "private": true,
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/acuarica/vscode-ethers"
    },
    "engines": {
        "vscode": "^1.26.0"
    },
    "categories": [
        "Notebooks",
        "Snippets",
        "Programming Languages",
        "Other"
    ],
    "activationEvents": [
        "onLanguage:ethers"
    ],
    "main": "./out/extension",
    "contributes": {
        "languages": [
            {
                "id": "ethers",
                "aliases": [
                    "Ethers"
                ],
                "extensions": [
                    ".ethers",
                    ".web3"
                ],
                "firstLine": "^(GET|POST|PUT|DELETE|PATCH|HEAD|OPTIONS|CONNECT|TRACE)\\s+(.*?)HTTP/[0-9\\.]+$",
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "ethers",
                "scopeName": "source.ethers",
                "path": "./ethers.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "ethers",
                "path": "./ethers.snippets.json"
            }
        ],
        "commands": [
            {
                "title": "Call Smart Contract Method",
                "command": "ethers-mode.callMethod",
                "category": "Ethers Mode"
            },
            {
                "title": "Enable CodeLens",
                "command": "codelens-sample.enableCodeLens",
                "category": "Ethers Mode"
            },
            {
                "title": "Disable Codelens",
                "command": "codelens-sample.disableCodeLens",
                "category": "Ethers Mode"
            }
        ],
        "configuration": {
            "properties": {
                "codelens-sample.enableCodeLens": {
                    "type": "boolean",
                    "default": true
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint . --ext .ts,.tsx",
        "watch": "tsc -watch -p ./",
        "test": "mocha"
    },
    "devDependencies": {
        "@types/chai": "^4.3.1",
        "@types/mocha": "^9.1.1",
        "@types/node": "^12.12.0",
        "@types/vscode": "^1.26.0",
        "@typescript-eslint/eslint-plugin": "^4.16.0",
        "@typescript-eslint/parser": "^4.16.0",
        "chai": "^4.3.6",
        "eslint": "^7.21.0",
        "mocha": "^9.2.2",
        "ts-node": "^10.7.0",
        "typescript": "^4.5.5"
    },
    "dependencies": {
        "ethers": "^5.6.2"
    },
    "mocha": {
        "require": "ts-node/register/files",
        "spec": "test/*.test.ts"
    }
}