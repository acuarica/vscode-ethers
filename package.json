{
    "name": "ethers-mode",
    "displayName": "Ethers Mode",
    "description": "Ethers Mode for VS Code",
    "icon": "icon.drawio.png",
    "version": "0.0.6",
    "publisher": "acuarica",
    "private": true,
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/acuarica/vscode-ethers"
    },
    "engines": {
        "vscode": "^1.26.0"
    },
    "categories": [
        "Notebooks",
        "Snippets",
        "Programming Languages",
        "Other"
    ],
    "keywords": ["ethereum", "ethers", "solidity", "evm", "address"],
    "activationEvents": [
        "onLanguage:ethers"
    ],
    "main": "./dist/main",
    "contributes": {
        "languages": [
            {
                "id": "ethers",
                "aliases": [
                    "Ethers"
                ],
                "extensions": [
                    ".ethers",
                    ".web3"
                ],
                "firstLine": "^net\\s+(\\w*?)$",
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "ethers",
                "scopeName": "source.ethers",
                "path": "./ethers.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "ethers",
                "path": "./ethers.snippets.json"
            }
        ],
        "commands": [
            {
                "title": "Call Smart Contract Method",
                "command": "ethers-mode.call",
                "category": "Ethers Mode"
            }
        ],
        "configuration": {
            "properties": {
                "ethers-mode.logLevel": {
                    "description": "Sets `ethers.js` log level to filter logging output below that level.",
                    "type": "string",
                    "enum": [
                        "DEBUG",
                        "INFO",
                        "WARNING",
                        "ERROR",
                        "OFF"
                    ],
                    "default": "DEBUG"
                },
                "ethers-mode.shouldDisplayNetworkInfo": {
                    "description": "Whether to fetch and display network additional info, such as chain Id, block number and gas price.",
                    "type": "boolean",
                    "default": "true"
                },
                "ethers-mode.shouldDisplayAddressInfo": {
                    "description": "Whether to fetch and display address additional info, such as Contract/EOA and balance.",
                    "type": "boolean",
                    "default": "true"
                }
            }
        }
    },
    "scripts": {
        "compile": "tsc --noEmit",
        "build": "esbuild ./src/extension.ts --bundle --outfile=dist/main.js --external:vscode --format=cjs --platform=node",
        "test": "mocha",
        "lint": "eslint . --ext .ts",
        "vsce:prepublish": "npm run compile",
        "vsce:package": "vsce package",
        "vsce:publish": "vsce publish"
    },
    "devDependencies": {
        "@types/chai": "^4.3.1",
        "@types/mocha": "^9.1.1",
        "@types/node": "^12.12.0",
        "@types/vscode": "^1.26.0",
        "@typescript-eslint/eslint-plugin": "^4.16.0",
        "@typescript-eslint/parser": "^4.16.0",
        "chai": "^4.3.6",
        "esbuild": "^0.14.38",
        "eslint": "^7.21.0",
        "mocha": "^9.2.2",
        "ts-node": "^10.7.0",
        "typescript": "^4.5.5",
        "vsce": "^2.7.0"
    },
    "dependencies": {
        "ethers": "^5.6.2"
    },
    "mocha": {
        "require": "ts-node/register/files",
        "spec": "test/*.test.ts"
    }
}